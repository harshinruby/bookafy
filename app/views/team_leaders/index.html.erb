<% if @team_leaders.empty? %>
<div class="well">
	<h4 class="text-center"> There are no team leaders yet created by you <%= current_user.name if current_user.name%></h4> <br />
	<p class="text-center"><%= link_to "Create Team Leaders", new_team_leader_path, :class => "btn btn-success"%></p>
</div>
<% else %>	
<div class="well">
<h1>Listing Team Leaders</h1>
</div>
<div class="well">
<table class= "table table-bordered">
  <thead>
    <tr>
      <th>Number of workers</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @team_leaders.each do |team_leader| %>
      <tr>
        <td><%= team_leader.number_of_workers %></td>
        <td><%= link_to 'Show', team_leader %></td>
        <td><%= link_to 'Edit', edit_team_leader_path(team_leader) %></td>
        <td><%= link_to 'Destroy', team_leader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="well">
<%= link_to 'New Team leader', new_team_leader_path, :class => "btn btn-primary" %>
</div>
<% end %>