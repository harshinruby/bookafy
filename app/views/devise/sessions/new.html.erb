<section class="main">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-2' }) do |f| %>
		<h1><span class="log-in">Log in</span> or <span><%= link_to 'Sign Up', new_client_path, :class =>"sign-up" %></span></h1>
		<p class="float">
			<label for="login"><i class="icon-user"></i>Username</label>
			 <%= f.text_field :email, :placeholder => "Email" %>
		</p>
		<p class="float">
			<label for="password"><i class="icon-lock"></i>Password</label>
			<%= f.password_field :password, placeholder: "Password", :class => "showpassword"%>
			<% if devise_mapping.rememberable? -%>
				<p style="float:left;"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
			<% end -%>
		</p>
	
		<p class="clearfix"> 
			<%= link_to image_tag('fb.png', :class => "log-twitter"), "/auth/facebook", id: "sign_in" %>
			<%= f.submit "Log in"%>    
		</p>
		<%end%>
</section>














