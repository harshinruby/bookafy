<% if @categories.empty? %>
<div class="well">
	<h4 class="text-center"> There are no categories for services yet created by you <%= current_user.name if current_user.name%></h4> <br />
	<p class="text-center"><%= link_to "Create Categories", new_category_path, :class => "btn btn-success"%></p>
</div>
<% else %>
	<div class="well">
		<h1>Listing categories</h1>
	</div>
	<div class="well">
		<table class="table table-bordered">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Description</th>
		      <th></th>
		      <th></th>
		      <th></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @categories.each do |category| %>
		      <tr>
		        <td><%= category.name %></td>
		        <td><%= category.description %></td>
		        <td><%= link_to 'Show', category %></td>
		        <td><%= link_to 'Edit', edit_category_path(category) %></td>
		        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	<br>
	<div class="well">
	<%= link_to 'New Category', new_category_path, :class => "btn btn-primary" %>
	</div>
<% end %>