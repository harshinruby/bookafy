<h1>Listing appointments</h1>
<div class="well">
<table class="table">
  <thead>
    <tr>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Service / Category</th>
      <th>worker Assigned</th>
      <th></th>
      <th>Actions</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointment_start_time %></td>
        <td><%= appointment.appointment_end_time %></td>
        <td><%= appointment.service.service_name %> from <%= appointment.category.name%> </td>
        <td><%= appointment.worker.alias %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<div class="well">
  <%= link_to 'New Appointment', new_appointment_path %>
</div>